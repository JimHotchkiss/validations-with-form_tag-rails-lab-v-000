<h2>Create a Author</h2>
<%= form_tag author_path, method: "post" do %>

<% if @author.errors.any %>
  <div id="error_explanation">
    <h2>There was some errors:</h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <% if @author.errors[:name].empty? %>
    <div class="field">
  <% else %>
  <div class="field_with_errors">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>

  <% if @author.errors[:phone_number].empty? %>
    <div class="field">
  <% else %>
  <div class="field_with_errors">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number" %>
  </div>

  <% if @author.errors[:email].empty? %>
    <div class="field">
  <% else %>
  <div class="field_with_errors">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>

 <%= submit_tag "Create" %>
<% end %>
